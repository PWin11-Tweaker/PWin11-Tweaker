<Window
    x:Class="PWin11Tweaker.RebootWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock 
            Grid.Row="0"
            Text="Требуется перезагрузка"
            FontSize="16"
            FontWeight="Bold"
            Margin="0,0,0,8"/>

        <!-- Текст описания -->
        <TextBlock 
            Grid.Row="1"
            Text="Для применения изменений требуется перезагрузка:"
            TextWrapping="Wrap"
            FontSize="12"
            Margin="0,0,0,15"/>

        <!-- Кнопки -->
        <StackPanel 
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            Spacing="8">
            <Button 
                x:Name="RebootNowButton"
                Content="Перезагрузить сейчас"
                Click="RebootNowButton_Click"
                Width="110"
                Height="28"/>
            <Button 
                x:Name="RebootLaterButton"
                Content="Перезагрузить позже"
                Click="RebootLaterButton_Click"
                Width="110"
                Height="28"/>
        </StackPanel>
    </Grid>
</Window>