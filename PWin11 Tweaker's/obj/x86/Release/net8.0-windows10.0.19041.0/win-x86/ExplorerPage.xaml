<Page
    x:Class="PWin11_Tweaker_s.ExplorerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <StackPanel Spacing="10">
            <TextBlock Text="Настройки Проводника" FontSize="24" FontWeight="Bold" />
            <CheckBox x:ConnectionId='2' x:Name="ShowFileExtensions" Content="Показывать расширения файлов" />
            <CheckBox x:ConnectionId='3' x:Name="ShowHiddenFiles" Content="Показывать скрытые файлы и папки" />
            <CheckBox x:ConnectionId='4' x:Name="ShowFullPath" Content="Показывать полный путь в заголовке" />

            <!--1. Удаление Рекомендуемых и Недавних файлов -->
            <CheckBox x:ConnectionId='5' x:Name="HideRecommendedAndRecent" Content="Скрыть 'Рекомендуемые' и 'Недавние файлы' в Домашней странице"/>

            <CheckBox x:ConnectionId='6' x:Name="UseClassicContextMenu" Content="Использовать классическое контекстное меню"/>

            <CheckBox x:ConnectionId='7' x:Name="CustomizeThisPC" Content="Скрыть папки из 'Этот компьютер'" ToolTipService.ToolTip="Удаляет папки (Документы, Музыка и т.д) из 'Этот компьютер'"/>

            <CheckBox x:ConnectionId='8' x:Name="HideQuickAccessIcons" Content="Скрыть значки быстрого доступа"/>

            <CheckBox x:ConnectionId='9' x:Name="DisableAnimations" Content="Отключить анимации в Проводнике"/>

            <CheckBox x:ConnectionId='10' x:Name="DisableThumbnails" Content="Отключить отображение миниатурюр"/>

            <TextBlock Text="Для допольнительных настроек используйте OldNewExplorer (открыть программу)" Margin="0,10,0,0"/>
            <Button x:ConnectionId='11' x:Name="OpenOldNewExplorer" Content="Открыть OldNewExplorer"                                  />



            <Button x:ConnectionId='12' x:Name="ApplyButton" Content="Применить"                           Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Page>

